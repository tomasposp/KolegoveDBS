<Window x:Class="KolegoveDBS.RestaurantInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KolegoveDBS"
        mc:Ignorable="d"
        Title="RestaurantInfo" Height="450" Width="800">
    <Grid>
        <Label Name="Name" Content="" HorizontalAlignment="Left" Margin="105,123,0,0" VerticalAlignment="Top"/>
        <Label Name="Address" Content="" HorizontalAlignment="Left" Margin="105,191,0,0" VerticalAlignment="Top"/>
        <StackPanel x:Name="MenuStackPanel" Margin="105,238,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
        </StackPanel>
        <Label Name="Rating" Content="" HorizontalAlignment="Left" Margin="570,69,0,0" VerticalAlignment="Top"/>
        <Button Name="orderBtn" Content="Order" HorizontalAlignment="Left" Margin="601,342,0,0" VerticalAlignment="Top" Click="Button_Click" Height="35" Width="77" FontSize="20"/>
        <Image Name="RestaurantImage" HorizontalAlignment="Left" Height="205" Margin="515,44,0,0" VerticalAlignment="Top" Width="215"/>
        <ComboBox x:Name="PaymentMethod"  HorizontalAlignment="Left" Height="27" Margin="205,301,0,0" VerticalAlignment="Top" Width="197" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Cash"/>
            <ComboBoxItem Content="Card"/>
        </ComboBox>
        <Label Content="Payment Method" HorizontalAlignment="Left" Margin="73,300,0,0" VerticalAlignment="Top" Width="124" FontSize="15"/>
        <Label Content="Tip amount" HorizontalAlignment="Left" Margin="73,342,0,0" VerticalAlignment="Top" Width="100" FontSize="15"/>
        <TextBox x:Name="Tip" HorizontalAlignment="Left" Height="30" Margin="205,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" FontSize="15" Text="0.00"/>


    </Grid>
</Window>
